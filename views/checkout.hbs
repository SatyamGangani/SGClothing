<body id="body">
<!-- Start Top Header Bar -->
{{>navbar}}
<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content">
					<h1 class="page-name">Checkout</h1>
					<ol class="breadcrumb">
						<li><a href="/">Home</a></li>
						<li class="active">checkout</li>
					</ol>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="page-wrapper">
   <div class="checkout shopping">
      <div class="container">
         <div class="row">
            <div class="col-md-8">
               <div class="block billing-details">
                  <h4 class="widget-title">Billing Details</h4>
                  <form class="checkout-form">
                     <div class="form-group">
                        <label for="full_name">Full Name</label>
                        <input type="text" class="form-control" id="full_name" placeholder="">
						<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidFullName" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter your full name.</span></div>
                     </div>
                     <div class="form-group">
                        <label for="user_address">Address</label>
                        <input type="text" class="form-control" id="user_address" placeholder="">
						<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidAddress" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter your proper address.</span></div>
                     </div>
                     <div class="checkout-country-code clearfix">
                        <div class="form-group">
                           <label for="user_post_code">Zip Code</label>
                           <input type="text" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control" id="user_post_code" name="zipcode" value="">
							<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidZip" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter your proper Zip Code.</span></div>
                        </div>
                        <div class="form-group" >
                           <label for="user_city">City</label>
                           <input type="text" class="form-control" id="user_city" name="city" value="">
							<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidCity" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter your proper City.</span></div>
                        </div>
                     </div>
                     <div class="form-group">
                        <label for="user_country">Country</label>
                        <input type="text" class="form-control" id="user_country" placeholder="">
						<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidCountry" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter your proper Country.</span></div>
                     </div>
                  </form>
               </div>
               <div class="block">
                  <h4 class="widget-title">Payment Method</h4>
                  <p>Credit Cart Details (Secure payment)</p>
                  <div class="checkout-product-details">
                     <div class="payment">
                        <div class="card-details">
                           <form  class="checkout-form">
                              <div class="form-group">
                                 <label for="card_number">Card Number <span class="required">*</span></label>
                                 <input  id="card_number" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control"   type="tel" placeholder="•••• •••• •••• ••••">
								 <div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidCardNumber" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter proper Card Number.</span></div>
                              </div>
                              <div class="form-group half-width padding-right">
                                 <label for="card_expiry">Expiry (MM/YY) <span class="required">*</span></label>
                                 <input id="card_expiry" class="form-control" type="tel" placeholder="MM / YY">
								 <div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidCardExpiry" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter proper Card Expiry Date.</span></div>
                              </div>
                              <div class="form-group half-width padding-left">
                                 <label for="card_cvc">Card Code <span class="required">*</span></label>
                                 <input id="card_cvc" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');" class="form-control"  type="tel" maxlength="4" placeholder="CVC" >
								 <div class="alert alert-danger alert-common alert-solid" style="display: none;" id="invalidCardCVV" role="alert"><i class="tf-ion-alert-circled"></i><span>Please enter proper Card CVV.</span></div>
                              </div>
                           </form>
							<div class="alert alert-danger alert-common alert-solid" style="display: none;" id="errorDiv" role="alert"><i class="tf-ion-alert-circled"></i><span id="orderErrorMsg"></span></div>
							<button onclick="placeOrder()" class="btn btn-main mt-20">Place Order</a >
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="col-md-4">
               <div class="product-checkout-details">
                  <div class="block">
                     <h4 class="widget-title">Order Summary</h4>
                     {{#each cartIds}}
                        <div class="media product-card">
                            <a class="pull-left" href="product-single.html">
                            <img class="media-object" src="../productImg/{{product.primaryImage}}" alt="Image" />
                            </a>
                            <div class="media-body">
                            <h4 class="media-heading"><a href="/shop/preview?id={{product._id}}">{{product.name}}</a></h4>
                            <p class="price">{{quantity}} x ₹ {{product.price}}</p>
                            </div>
                        </div>
                    {{/each}}
                     <div class="discount-code">
                        <a href="/cart" class="btn btn-main btn-medium btn-round-full  btn-icon"><i class="tf-ion-ios-cart-outline"></i>Edit Cart</a>
                        <p>Have a discount ? <a data-toggle="modal" data-target="#coupon-modal" href="#!">Click here</a></p>
                     </div>
                     <ul class="summary-prices">
                        <li>
                           <span>Subtotal:</span>
                           <span class="price">₹{{totCartVal}}</span>
                        </li>
                        <li>
                           <span>Shipping:</span>
                           <span>Free</span>
                        </li>
                     </ul>
                     <div class="summary-total">
                        <span>Total</span>
                        <span>₹{{totCartVal}}</span>
                     </div>
                     <div class="verified-icon">
                        <img src="../assets/images/shop/verified.png">
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
   <!-- Modal -->
   <div class="modal fade" id="coupon-modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
         <div class="modal-content">
            <div class="modal-body">
               <form>
                  <div class="form-group">
                     <input class="form-control" type="text" placeholder="Enter Coupon Code">
                  </div>
                  <button type="submit" class="btn btn-main">Apply Coupon</button>
               </form>
            </div>
         </div>
      </div>
   </div>

