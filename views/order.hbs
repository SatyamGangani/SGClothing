<body id="body">
<!-- Start Top Header Bar -->
{{>navbar}}
<section class="page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="content" >
					<h1 class="page-name">Orders</h1>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="user-dashboard page-wrapper">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="dashboard-wrapper user-dashboard">
					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Order ID</th>
									<th>Date</th>
									<th>Items</th>
									<th>Total Price</th>
									<th>Status</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
                                {{#each orders}}
                                    <tr>
                                        <td>{{_id}}</td>
                                        <td>{{orderDate}}</td>
                                        <td>{{noOfItems}}</td>
                                        <td>â‚¹ {{amount}}</td>
                                        <td><span class="label label-primary">Processing</span></td>
                                        <td><p href="" class="btn btn-default" onclick='viewOrder("{{_id}}")' data-toggle="modal" data-target="#orderModal" >View</p></td>
                                    </tr>
                                {{/each}}
                            </tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<!-- Button trigger modal -->
{{!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#productEditModal">
</button> --}}

<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" role="dialog" aria-labelledby="orderDetail" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
		<div class="modal-header">
			<h5 class="modal-title" id="orderDetail">Order Detail</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
			</button>
		</div>
		<div class="modal-body">
			<div class="product-checkout-details">
				<div class="block">
					<div id="orderModalItemBody">

					</div>
					<ul class="summary-prices mt-10">
						<li>
							<span>Subtotal:</span>
							<span class="price" id="orderModalPrice"></span>
						</li>
						<li>
							<span>Shipping:</span>
							<span>Free</span>
						</li>
					</ul>
					<div class="summary-total">
						<span>Total</span>
						<span id="orderModalTotal"></span>
					</div>
					</div>
				</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			{{!-- <button type="button" class="btn btn-primary" id="updateModalBtn" >Save changes</button> --}}
			{{!-- <button type="button" class="btn btn-primary" id="updateModalBtn" onclick="addProductData(true)" >Save changes</button> --}}
		</div>
		</div>
	</div>
</div>
